  },
  "engines": {
    "node": ">=18.20.0"
  },
  "dependencies": {
    "yahoo-finance2": "^3.4.0",
    "dayjs": "^1.11.13",
    "yargs": "^18.0.0",
    "zod": "^4.0.17",
    "p-limit": "^6.2.0",
    "fs-extra": "^11.3.1"
  },
  "keywords": [
    "microcap",
    "trading",
    "yahoo-finance",
    "portfolio",
    "event-driven",
    "node",
    "esm"
  ],
  "license": "UNLICENSED"
