{
  "name": "microcap-portfolio-bot",
  "version": "0.2.0",
  "private": true,
  "description": "Event-driven US microcap portfolio bot using yahoo-finance2 (TypeScript / Node >= 18)",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mpb": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc -p .",
    "start": "node dist/index.js",
    "run": "node dist/index.js run",
    "status": "node dist/index.js status",
    "dev": "tsx src/index.ts",
    "clean": "rm -rf data out dist",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "engines": {
    "node": ">=20.14.0"
  },
  "dependencies": {
    "dayjs": "^1.11.13",
    "dotenv": "^17.2.1",
    "fs-extra": "^11.3.1",
    "p-limit": "^6.2.0",
    "yahoo-finance2": "^3.4.0",
    "yargs": "^17.7.2",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/node": "^20.14.2",
    "@types/yargs": "^17.0.33", 
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4"
  },
  "keywords": [
    "microcap",
    "trading",
    "yahoo-finance",
    "portfolio",
    "event-driven",
    "node",
    "typescript",
    "esm"
  ],
  "license": "UNLICENSED"
}
