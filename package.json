{
  "name": "microcap-portfolio-bot",
  "version": "0.1.0",
  "private": true,
  "description": "Event-driven US microcap portfolio bot using yahoo-finance2 (ESM / Node >= 18)",
  "type": "module",
  "main": "microcap-portfolio-bot.mjs",
  "bin": {
    "mpb": "./microcap-portfolio-bot.mjs"
  },
  "scripts": {
