# --- Portée & prix ---
REGION=ALL                 # US | EU | ALL
MIN_PRICE_USD=1
MAX_PRICE_USD=10

# --- Filtres liquidité ---
MIN_ADV_3M=30000           # volume moyen 3m minimal (actions/jour)

# --- Capital & risque ---
CAPITAL_DEFAULT=100000
CAPITAL_SYNC_WITH_ENV=true # si true, le capital est pris du .env à chaque run
RISK_PER_TRADE_PCT=0.005   # 0.5% du capital risqué par trade

# --- Execution / Signaux ---
OPENING_RANGE_MIN=15       # minutes pour l'Opening Range
TP_R_MULT_1=1.5
TP_R_MULT_2=3
STOP_ATR_MULT=2            # stop de secours si pas d'OR low (fallback)

# --- Dossiers ---
OUT_DIR=out
DATA_DIR=data

YF_TIMEOUT_MS=8000
YF_MAX_CONCURRENCY=4

OVERNIGHT_BREAK_BUFFER_PCT=0.002     # +0,20% au-dessus du plus haut d’hier pour le buy stop
ENTRY_STOPLIMIT_BUFFER_PCT=0.003     # +0,30% de marge pour la limite du stop-limit
PLAN_MAX_PER_SIDE=12                 # nb max de tickers par zone (US/EU)

MIN_NOTIONAL_USD=200            # min $ par ordre (force un minimum d'engagement)
MIN_SHARES=10                   # min d’actions par ordre


# ---- Budgets / Contrôles ----
ORDER_MAX_NOTIONAL_PCT=0.25      # max 25% du capital par ordre
DAILY_NOTIONAL_BUDGET_PCT=1.0    # max 100% du capital engagé au total (overnight)
DAILY_RISK_BUDGET_PCT=0.20       # max 20% du capital en risque total cumulé
MAX_TRADES_PER_DAY=8             # cap du nombre d'ordres au total
MAX_TRADES_PER_SIDE=8            # cap par côté (US/EU) si tu veux (sinon mets = PLAN_MAX_PER_SIDE)

# ---- Universe (optionnel)
INCLUDE_FUNDS=false              # ignore ETF/CEF/funds si false


# Intraday scan
SCAN_INTERVAL=1m           # 1m ou 5m
RVOL_MIN=1.2               # volume relatif minimal
BB_PERIOD=20
BB_STD=2
ENTRY_BUFFER_PCT=0.001     # +0.10% au-dessus du plus haut bougie signal
SWING_LOOKBACK=10          # n barres pour le swing low
INTRA_LOOKBACK_MIN=120     # minutes d'historique intraday minimum

# === Timeframes & signal ===
SIGNAL_TF=1H                 # 1H | 4H  (le plan utilisera ce TF pour le signal)
HR_LOOKBACK_DAYS=15          # nb de jours à récupérer en 60m pour construire 1H/4H
BB_PERIOD_HR=20
BB_STD=2
EMA_FAST_HR=20
EMA_SLOW_HR=50
ENTRY_BUFFER_PCT=0.001       # +0.10% au-dessus du plus haut de la bougie signal
STOP_BUFFER_PCT=0.001        # -0.10% sous le stop (LB ou low de la bougie)

# === Filtres tendance Daily (inchangés dans l’esprit)
TREND_MODE=RELAX             # STRICT: close>SMA20>SMA50>=SMA200 & SMA20 up | RELAX: close>SMA20 & SMA20>=SMA50 & SMA20 up

# === Volume relatif (sur le TF du signal)
RVOL_MIN=1.10                # 1.10 à 1.20 raisonnable

# === Concurrence Yahoo (existe déjà chez toi)
YF_MAX_CONCURRENCY=4
